{
  "include": ["server/src", "src"],
  "exclude": ["**/src/**/*.test.ts", "**/src/**/test.ts"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@dash-ui/styles": ["./src"],
      "@dash-ui/styles/server": ["./server"]
    }
  }
}
