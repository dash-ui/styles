{
  "name": "@dash-ui/styles",
  "version": "1.0.2",
  "description": "A tiny, powerful, framework-agnostic CSS-in-JS library.",
  "keywords": [
    "styles",
    "css-in-js",
    "css",
    "css variables",
    "themes",
    "theming",
    "react",
    "svelte",
    "vue",
    "stylesheet",
    "stylesheets",
    "ssr",
    "dash ui",
    "dash",
    "css-in-react",
    "css-in-vue",
    "css-in-svelte"
  ],
  "homepage": "https://github.com/dash-ui/styles#readme",
  "bugs": "https://github.com/dash-ui/styles/issues",
  "repository": "github:dash-ui/styles",
  "license": "MIT",
  "author": "Jared Lunde <jared.lunde@gmail.com> (https://jaredLunde.com)",
  "sideEffects": false,
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/main/index.js",
      "browser": "./dist/module/index.js",
      "umd": "./dist/umd/dash.js",
      "types": "./types/index.d.ts",
      "default": "./dist/main/index.js"
    },
    "./server": {
      "source": "./server/src/index.ts",
      "import": "./server/dist/esm/index.mjs",
      "require": "./server/dist/main/index.js",
      "browser": "./server/dist/module/index.js",
      "types": "./server/types/index.d.ts",
      "default": "./server/dist/main/index.js"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "main": "dist/main/index.js",
  "unpkg": "dist/umd/dash.js",
  "module": "dist/module/index.js",
  "source": "src/index.ts",
  "types": "types/index.d.ts",
  "files": [
    "/src",
    "/dist",
    "/types",
    "/server"
  ],
  "scripts": {
    "bench": "lundle build -f module -e . && NODE_ENV=production babel-node ./benchmark -x .ts,.js,.json",
    "build": "lundle build",
    "check-types": "lundle check-types",
    "dev": "lundle build -f module,cjs -w",
    "format": "prettier --write \"{,!(node_modules|dist|coverage)/**/}*.{ts,js,md,yml,json}\"",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "validate": "lundle check-types && lundle build -f module && npm run lint && jest --coverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "package.json": [
      "pnpx -y prettier-package-json --write"
    ],
    "**/*.{ts,js}": [
      "eslint --ext .ts,.js --fix",
      "prettier --write"
    ],
    "**/*.{md,yml,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "lunde"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true
        }
      ],
      "prefer-const": "off",
      "prefer-rest-params": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "benchmark",
    "coverage",
    "dist",
    "test",
    "types",
    "*.config.js"
  ],
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "globals": {
      "__DEV__": true
    },
    "moduleDirectories": [
      "node_modules",
      "src",
      "server/src",
      "test"
    ],
    "moduleNameMapper": {
      "@dash-ui/styles": "<rootDir>/src/index.ts"
    },
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "snapshotResolver": "./test/resolve-snapshot.js",
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/{server/src,src}/**/?(*.)test.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc-node/jest"
      ]
    }
  },
  "dependencies": {
    "@dash-ui/stylis": "^1.0.5",
    "@dash-ui/unitless": "^2.0.0",
    "csstype": "^3.0.9",
    "ts-toolbelt": "^9.6.0"
  },
  "devDependencies": {
    "@babel/node": "^7.10.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@essentials/benchmark": "^1.0.7",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@swc-node/core": "^1.6.0",
    "@swc-node/jest": "^1.3.2",
    "@types/crc": "^3.4.0",
    "@types/jest": "latest",
    "crc": "^3.8.0",
    "cz-conventional-changelog": "3.2.0",
    "emotion": "^10.0.27",
    "eslint": "^7.32.0",
    "eslint-config-lunde": "^0.5.0",
    "husky": "^7.0.2",
    "jest": "^27.2.2",
    "lint-staged": "latest",
    "lundle": "^0.4.13",
    "prettier": "latest",
    "type-fest": "^2.3.4",
    "typescript": "^4.4.3"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "types",
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
